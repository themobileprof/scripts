#!/bin/bash

# Install AWS CLI

# Main function
main() {
    install_aws_cli
}

# Download and Install AWS CLI
install_aws_cli() {
    # Install AWS CLI using pip
    pip install awscli

    # Check if the installation was successful
    if [ $? -eq 0 ]; then
        echo "AWS CLI has been successfully installed."
        aws --version
    else
        echo "Failed to install AWS CLI."
        exit 1
    fi
}

# Run the main function
main
